@model IEnumerable<Project.Entities.OrganizationEntity>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Список организаций</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            font-weight: 300;
            line-height: 1.42em;
            color: #A7A1AE;
            background-color: #1F2739;
        }

        h1 {
            font-size: 3em;
            font-weight: 300;
            line-height: 1em;
            text-align: center;
            color: #4DC3FA;
        }

        .container {
            text-align: left;
            width: 80%;
            margin: 0 auto;
            display: table;
            padding: 0 0 2em 0;
        }

            .container th, .container td {
                padding: 1.5% 2%;
            }

            .container th {
                background-color: #1F2739;
            }

                .container th h1 {
                    font-weight: bold;
                    font-size: 1em;
                    text-align: left;
                    color: #185875;
                }

            .container td {
                font-weight: normal;
                font-size: 1em;
                box-shadow: 0 2px 2px -2px #0E1119;
            }

            .container tr:nth-child(odd) {
                background-color: #323C50;
            }

            .container tr:nth-child(even) {
                background-color: #2C3446;
            }

            .container td:first-child {
                color: inherit;
            }

            .container tr:hover {
                background-color: #464A52;
                box-shadow: 0 6px 6px -6px #0E1119;
            }

            .container td:hover {
                background-color: #FFF842;
                color: #403E10;
                font-weight: bold;
                box-shadow: #7F7C21 -1px 1px, #7F7C21 -2px 2px;
                transform: translate3d(6px, -6px, 0);
                transition: all 0.4s linear;
            }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #1F2739;
            color: white;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            width: 100%;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #FFF842;
                color: #403E10;
            }

        .action-link {
            color: #FB667A;
            text-decoration: none;
            margin-right: 10px;
        }

            .action-link:hover {
                text-decoration: underline;
            }

        media (max-width: 800px) {
            .container td:nth-child(4), .container th:nth-child(4)

        {
            display: none;
        }

        }
    </style>
</head>
<body>

    <h1>Список организаций</h1>

    <table class="container">
        <thead>
            <tr>
                <th>Название</th>
                <th>Город</th>
                <th>Описание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var organization in Model)
            {
                <tr>
                    <td>@organization.Name</td>
                    <td>@organization.City</td>
                    <td>@organization.Description</td>
                    <td>
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-action="Details" asp-route-id="@organization.Id" class="action-link">Просмотр</a>
                            <a asp-action="Edit" asp-route-id="@organization.Id" class="action-link">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@organization.Id" class="action-link">Удалить</a>
                        }
                        else
                        {
                            <span>Dont have permissions</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Create" class="btn">Добавить организацию</a>
        }
    </div>

</body>
</html>