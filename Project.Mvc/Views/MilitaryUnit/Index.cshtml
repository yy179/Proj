@model IEnumerable<Project.Entities.MilitaryUnitEntity>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Список военных организаций</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            color: #007bff;
        }

        .table {
            margin-top: 20px;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Список военных организаций</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var militaryUnit in Model)
                {
                    <tr>
                        <td>@militaryUnit.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@militaryUnit.Id" class="btn btn-info btn-sm">Просмотр</a>
                            <a asp-action="Edit" asp-route-id="@militaryUnit.Id" class="btn btn-secondary btn-sm">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@militaryUnit.Id" class="btn btn-danger btn-sm">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="Create" class="btn btn-primary">Добавить военную организацию</a>
    </div>

</body>
</html>