@model Project.Entities.VolunteerEntity
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Удалить волонтера</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            font-weight: 300;
            line-height: 1.42em;
            color: #A7A1AE;
            background-color: #1F2739;
        }

        h1 {
            font-size: 3em;
            font-weight: 300;
            line-height: 1em;
            text-align: center;
            color: #dc3545;
            margin-top: 30px;
        }

        .confirmation-container {
            width: 80%;
            margin: 20px auto;
            background-color: #2C3446;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            color: #FFFFFF;
        }

        .btn {
            width: 100%;
            margin-top: 10px;
            font-weight: bold;
        }

        .btn-danger {
            background-color: #FF4D4D;
            border: none;
        }

            .btn-danger:hover {
                background-color: #E03E3E;
            }
    </style>
</head>
<body>

    <h1>Удалить волонтера</h1>

    <div class="confirmation-container">
        <h4>Вы уверены, что хотите удалить волонтера @Model.FirstName @Model.LastName?</h4>
        <div>
            <strong>Город:</strong> @Model.City
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Удалить</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>

</body>
</html>