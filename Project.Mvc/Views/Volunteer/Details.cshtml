@model Project.Entities.VolunteerEntity
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Детали волонтера</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            font-weight: 300;
            line-height: 1.42em;
            color: #A7A1AE;
            background-color: #1F2739;
        }

        h1 {
            font-size: 3em;
            font-weight: 300;
            line-height: 1em;
            text-align: center;
            color: #4DC3FA;
            margin-top: 30px;
        }

        .volunteer-details {
            width: 80%;
            margin: 20px auto;
            background-color: #2C3446;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            color: #FFFFFF;
        }

            .volunteer-details p {
                margin: 10px 0;
            }

        h2 {
            font-size: 2em;
            font-weight: 300;
            text-align: center;
            color: #FB667A;
            margin-top: 30px;
        }

        .btn-container {
            text-align: center;
            margin: 20px 0;
        }

        .btn {
            margin: 10px 5px;
            padding: 10px 20px;
            font-weight: bold;
            text-decoration: none;
            color: #FFFFFF;
            background-color: #007bff;
            border-radius: 5px;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        .organization-list, .request-list {
            margin: 20px 0;
            padding: 0;
            list-style-type: none;
            text-align: center;
        }

            .organization-list li, .request-list li {
                background-color: #323C50;
                margin: 10px 0;
                padding: 10px;
                border-radius: 5px;
                color: #A7A1AE;
            }

                .organization-list li:hover, .request-list li:hover {
                    background-color: #464A52;
                }
    </style>
</head>
<body>

    <h1>Детали волонтера</h1>

    <div class="volunteer-details">
        <h4>@Model.FirstName @Model.LastName</h4>
        <p>Город: @Model.City</p>
        <p>Биография: @Model.Bio</p>
        <p>Дата рождения: @Model.DateOfBirth.ToShortDateString()</p>
    </div>

    <h2>Организации</h2>
    @if (ViewBag.Organizations != null && (ViewBag.Organizations).Count > 0)
    {
        <ul class="organization-list">
            @foreach (var organization in ViewBag.Organizations)
            {
                <li>@organization.Name</li>
            }
        </ul>
    }
    else
    {
        <p>Нет активных организаций.</p>
    }

    <h2>Активные Заявки</h2>
    @if (ViewBag.Requests != null && (ViewBag.Requests).Count > 0)
    {
        <ul class="request-list">
            @foreach (var request in ViewBag.Requests)
            {
                <li>@request.Title</li>
            }
        </ul>
    }
    else
    {
        <p>Нет активных заявок.</p>
    }

    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Редактировать</a>
        <a asp-action="Index" class="btn btn-primary">Назад к списку</a>
    </div>

</body>
</html>