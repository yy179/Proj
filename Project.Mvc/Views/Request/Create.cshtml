@model Project.Entities.RequestEntity
@{
    ViewBag.Title = "Создать заявку";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40;
            font-family: Arial, sans-serif;
        }

        h2 {
            text-align: center;
            margin-top: 30px;
            color: #007bff;
        }

        .form-container {
            width: 60%;
            margin: 20px auto;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .btn {
            margin-top: 10px;
        }

        .text-danger {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>

    <h2>Создание заявки</h2>

    <div class="form-container">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="Title">Заголовок</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Description">Описание</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="EndDate">Крайний срок</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Importance">Важность</label>
                <select asp-for="Importance" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>

            <div class="form-group">
                <label for="MilitaryUnitId">Подразделение</label>
                <select asp-for="MilitaryUnitId" class="form-control" asp-items="ViewBag.MilitaryUnits"></select>
                <span asp-validation-for="MilitaryUnitId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Создать</button>
        </form>
    </div>

</body>
</html>