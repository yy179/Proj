@model IEnumerable<Project.Entities.RequestEntity>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Все заявки</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40;
            font-family: Arial, sans-serif;
        }

        h2 {
            text-align: center;
            margin-top: 30px;
            color: #007bff;
        }

        .table-container {
            width: 80%;
            margin: 20px auto;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .btn {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <h2>Все заявки</h2>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Заголовок</th>
                    <th>Описание</th>
                    <th>Крайний срок</th>
                    <th>Важность</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.Title</td>
                        <td>@request.Description</td>
                        <td>@request.EndDate.ToString("dd-MM-yyyy")</td>
                        <td>@request.Importance</td>
                        <td>@request.IsActive</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@request.Id" class="btn btn-info">Подробнее</a>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@request.Id" />
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Create" class="btn btn-primary">Добавить заявку</a>

</body>
</html>