@model IEnumerable<Project.Entities.MilitaryUnitEntity>
@{
    ViewBag.Title = "Присоединить контактное лицо к военной организации";
    var contactPerson = ViewBag.ContactPerson;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            font-weight: 300;
            line-height: 1.42em;
            color: #A7A1AE;
            background-color: #1F2739;
        }

        h1 {
            font-size: 3em;
            font-weight: 300;
            text-align: center;
            color: #4DC3FA;
            margin-top: 30px;
        }

        h3 {
            text-align: center;
            color: #FB667A;
            margin-top: 20px;
        }

        .table-container {
            width: 80%;
            margin: 20px auto;
            background-color: #2C3446;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            color: #FFFFFF;
        }

        .table th, .table td {
            color: #A7A1AE;
        }

        .table th {
            background-color: #1F2739;
            color: #FB667A;
        }

        .btn {
            margin-top: 10px;
            width: 100%;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #4DC3FA;
            border: none;
        }

            .btn-primary:hover {
                background-color: #3DA1DB;
            }

        .btn-secondary {
            background-color: #6C757D;
        }

            .btn-secondary:hover {
                background-color: #5A6268;
            }
    </style>
</head>
<body>

    <h1>Присоединить контактное лицо к военной организации</h1>

    <h3>@contactPerson.FirstName @contactPerson.LastName</h3>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Название организации</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var militaryUnit in Model)
                {
                    <tr>
                        <td>@militaryUnit.Name</td>
                        <td>
                            <form asp-action="AddToMilitaryUnit" method="post">
                                <input type="hidden" name="contactPersonId" value="@contactPerson.Id" />
                                <input type="hidden" name="militaryUnitId" value="@militaryUnit.Id" />
                                <button type="submit" class="btn btn-primary">Присоединить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Index" class="btn btn-secondary">Назад</a>

</body>
</html>