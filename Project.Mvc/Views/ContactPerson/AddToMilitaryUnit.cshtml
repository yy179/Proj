@model IEnumerable<Project.Entities.MilitaryUnitEntity>
@{
    ViewBag.Title = "Присоединить контактное лицо к военной организации";
    var contactPerson = ViewBag.ContactPerson;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #343a40;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            font-size: 2.5rem;
            color: #007bff;
        }

        h3 {
            text-align: center;
            margin-top: 20px;
            color: #495057;
        }

        .table-container {
            width: 80%;
            margin: 20px auto;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .btn {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <h1>Присоединить контактное лицо к военной организации</h1>

    <h3>@contactPerson.FirstName @contactPerson.LastName</h3>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Название организации</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var militaryUnit in Model)
                {
                    <tr>
                        <td>@militaryUnit.Name</td>
                        <td>
                            <form asp-action="AddToMilitaryUnit" method="post">
                                <input type="hidden" name="contactPersonId" value="@contactPerson.Id" />
                                <input type="hidden" name="militaryUnitId" value="@militaryUnit.Id" />
                                <button type="submit" class="btn btn-primary">Присоединить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-action="Index" class="btn btn-secondary">Назад</a>

</body>
</html>